{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "declaration": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "paths": {
      "@NodeService/*": ["./src/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src", "src/app.ts"]
}
